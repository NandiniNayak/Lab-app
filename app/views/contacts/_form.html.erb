<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :subject, collection: ['Query', 'Comment'] %>
    <%= f.input :message, as: :text %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Get in touch' %>
  </div>
<% end %>
